<%- include('./partials/header') -%>

<%- include('./partials/staffHeader')%>

<form class="addToDb border" method="post" action="/">
    <div class="title pageHeading">
        <h3>Add member to database</h3>
    </div>
    <div class="form-row">
        <div class="form-groups col-md-6">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" id="inputName" placeholder="Name" name="name">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
        </div>

    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCourse">Course</label>
            <input type="text" class="form-control" id="inputCourse" placeholder="only for students" name="course">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPosition">Position</label>
            <select id="inputPosition" class="form-control" name="position" required>
                <option value="Student" selected>Student</option>
                <option value="Staff">Staff</option>
            </select>
        </div>

    </div>

    <div>
        <button type="submit" class="btn btn-primary" >Add to DB</button>
    </div>
</form>

<div class="space"></div>
<div class="space"></div>

<%- include('./partials/footer') -%>
